generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(cuid())
  clerkId  String @unique
  image    String?
  movies   UsersOnMovies[]
}

model Movie {
  id                Int      @id @default(autoincrement())
  users             UsersOnMovies[]
  tmdb_id           String   @unique // Removed user_id from here
  title             String
  adult             Boolean
  media_type        String
  backdrop_path     String
  genre_ids         Int[]
  original_language String
  original_title    String
  original_name     String
  overview          String
  popularity        Float
  poster_path       String
  release_date      String
  name              String
  video             Boolean
  vote_average      Float
  vote_count        Int
  first_air_date    String
  type              String
}  

model UsersOnMovies {
  user       User     @relation(fields: [userId], references: [id])
  userId     String 
  movie      Movie    @relation(fields: [movieId], references: [id])
  movieId    Int 

  @@id([userId, movieId])
}
